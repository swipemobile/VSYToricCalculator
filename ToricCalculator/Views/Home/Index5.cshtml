	.row {
		display: -ms-flexbox; /* IE10 */
		display: flex;
		-ms-flex-wrap: wrap; /* IE10 */
		flex-wrap: wrap;
		padding: 0 4px;
	}

	/* Create four equal columns that sits next to each other */
	.column {
		-ms-flex: 39%; /* IE10 */
		flex: 39%;
		max-width: 39%;
		padding: 0 4px;
	}

	.column2 {
		-ms-flex: 10%; /* IE10 */
		flex: 10%;
		max-width: 10%;
		padding: 0 4px;
	}

	.column3 {
		-ms-flex: 2%; /* IE10 */
		flex: 2%;
		max-width: 2%;
		padding: 0 4px;
	}

	.column img {
		margin-top: 8px;
		vertical-align: middle;
		width: 100%;
	}

	/* Responsive layout - makes a two column-layout instead of four columns */
	@@media screen and (max-width: 800px) {
		.column {
			-ms-flex: 39%;
			flex: 39%;
			max-width: 39%;
		}

		.column2 {
			-ms-flex: 10%;
			flex: 10%;
			max-width: 10%;
		}

		.column3 {
			-ms-flex: 2%;
			flex: 2%;
			max-width: 2%;
		}
	}

	/* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
	@@media screen and (max-width: 600px) {
		.column {
			-ms-flex: 39%;
			flex: 39%;
			max-width: 39%;
		}

		.column2 {
			-ms-flex: 10%;
			flex: 10%;
			max-width: 10%;
		}

		.column3 {
			-ms-flex: 2%;
			flex: 2%;
			max-width: 2%;
		}
	}

